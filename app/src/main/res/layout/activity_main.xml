<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:id="@+id/viewLegionRed"
            android:layout_width="20dp"
            android:layout_height="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendarView" />

    <View
            android:id="@+id/viewLegionGreen"
            android:layout_width="20dp"
            android:layout_height="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="#0f0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLegionRed" />

    <View
            android:id="@+id/viewLegionGreyDark"
            android:layout_width="20dp"
            android:layout_height="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="#666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLegionGreen" />

    <TextView
            android:id="@+id/tvLegionRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="satu"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/viewLegionRed"
            app:layout_constraintLeft_toRightOf="@id/viewLegionRed"
            app:layout_constraintTop_toTopOf="@id/viewLegionRed" />

    <TextView
            android:id="@+id/tvLegionGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dua"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/viewLegionGreen"
            app:layout_constraintLeft_toRightOf="@id/viewLegionGreen"
            app:layout_constraintTop_toTopOf="@id/viewLegionGreen" />

    <TextView
            android:id="@+id/tvLegionGreyDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tiga"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/viewLegionGreyDark"
            app:layout_constraintLeft_toRightOf="@id/viewLegionGreyDark"
            app:layout_constraintTop_toTopOf="@id/viewLegionGreyDark" />

</android.support.constraint.ConstraintLayout>